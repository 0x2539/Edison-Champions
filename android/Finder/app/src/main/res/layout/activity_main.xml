<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/worker_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to worker"
        android:visibility="gone"/>

    <Button
        android:id="@+id/people_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/worker_activity_button"
        android:text="go to people"/>

    <Button
        android:id="@+id/facebook_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/people_activity_button"
        android:text="go to facebook"
        android:visibility="gone"/>

    <Button
        android:id="@+id/server_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/facebook_activity_button"
        android:text="go to server"
        android:visibility="gone"/>

    <Button
        android:id="@+id/events_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/server_activity_button"
        android:text="go to events"/>


</RelativeLayout>
